<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <targets>
        <target name="colouredConsole" xsi:type="ColoredConsole" useDefaultRowHighlightingRules="false"
                layout="${pad:padding=15:inner=[${longdate}]|${pad:padding=4:inner=${level:uppercase=true}}|(${callsite:className=True:includeNamespace=False:fileName=False:includeSourcePath=False:methodName=false})|${message}" >
            <highlight-row condition="level == LogLevel.Debug" foregroundColor="DarkGray" />
            <highlight-row condition="level == LogLevel.Info" foregroundColor="White" />
            <highlight-row condition="level == LogLevel.Warn" foregroundColor="Yellow" />
            <highlight-row condition="level == LogLevel.Error" foregroundColor="Red" />
            <highlight-row condition="level == LogLevel.Fatal" foregroundColor="Red" backgroundColor="White" />
           
            <highlight-word regex="\d" foregroundColor="Blue" />
            <highlight-word regex="(?&lt;=\&quot;)([^\s].*?)(?=\&quot;)" foregroundColor="Yellow" />
            
            <highlight-word regex="\([^)]+\)" foregroundColor="Green" />
            <highlight-word regex="\[[^]]+\]" foregroundColor="Blue" />
            <highlight-word regex="INFO" foregroundColor="DarkYellow" backgroundColor="DarkCyan" />
            <highlight-word regex="DEBUG" foregroundColor="DarkCyan" backgroundColor="DarkGray" />
            <highlight-word regex="WARN" foregroundColor="DarkYellow" backgroundColor="DarkCyan" />
        </target>
        <target xsi:type="File" name="allfile" fileName="${basedir}/logs/all.log"
                layout="${callsite}=>${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${level:uppercase=true}|${logger} ${message} ${exception:format=tostring}" />

        <target name="infoFile" xsi:type="File"
                layout="${callsite}=>${longdate} ${pad:padding=5:inner=${level:uppercase=true}} ${logger} ${message}"
                fileName="${basedir}/logs/info.log" keepFileOpen="false" encoding="utf-8" />
        <target name="errorFile" xsi:type="File"
                layout="${callsite}=>${longdate} ${pad:padding=5:inner=${level:uppercase=true}} ${logger} ${message}"
                fileName="${basedir}/logs/error.log" keepFileOpen="false" encoding="utf-8" />
    </targets>

    <rules>
        <logger name="Microsoft.Hosting.Lifetime" minlevel="Info" writeTo="allfile,colouredConsole" final="true" />
        <logger name="Microsoft.*" maxlevel="Info" final="true" />
        <logger name="System.Net.Http.*" maxlevel="Info" final="true" />

        <logger name="*" minlevel="Debug" writeTo="colouredConsole" />

        <logger name="*" minlevel="Debug" maxlevel="Info" writeTo="infoFile" />
        <logger name="*" minlevel="Warn" maxlevel="Fatal" writeTo="errorFile" />
    </rules>
</nlog>